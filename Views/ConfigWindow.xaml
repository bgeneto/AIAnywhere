<Window
    x:Class="AIAnywhere.Views.ConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="AI Anywhere - Settings"
    Width="560"
    ui:WindowHelper.UseModernWindowStyle="True"
    Icon="../AIAnywhere.ico"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Title  -->
            <RowDefinition Height="Auto" />
            <!--  Hotkey heading  -->
            <RowDefinition Height="Auto" />
            <!--  Hotkey textbox  -->
            <RowDefinition Height="Auto" />
            <!--  Hotkey description  -->
            <RowDefinition Height="Auto" />
            <!--  Paste Behavior heading  -->
            <RowDefinition Height="Auto" />
            <!--  Paste Behavior combobox  -->
            <RowDefinition Height="Auto" />
            <!--  Paste Behavior description  -->
            <RowDefinition Height="Auto" />
            <!--  Performance Settings heading  -->
            <RowDefinition Height="Auto" />
            <!--  Text Selection checkbox  -->
            <RowDefinition Height="Auto" />
            <!--  Text Selection description  -->
            <RowDefinition Height="Auto" />
            <!--  API Configuration heading  -->
            <RowDefinition Height="Auto" />
            <!--  API Base URL label  -->
            <RowDefinition Height="Auto" />
            <!--  API Base URL textbox  -->
            <RowDefinition Height="Auto" />
            <!--  API Key label  -->
            <RowDefinition Height="Auto" />
            <!--  API Key passwordbox  -->
            <RowDefinition Height="Auto" />
            <!--  LLM Model label  -->
            <RowDefinition Height="Auto" />
            <!--  LLM Model combobox + button  -->
            <RowDefinition Height="Auto" />
            <!--  Model status text  -->
            <RowDefinition Height="*" />
            <!--  Spacer  -->
            <RowDefinition Height="Auto" />
            <!--  Buttons  -->
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource TitleTextBlock}"
            Text="Settings" />

        <!--  Hotkey Section  -->
        <TextBlock
            Grid.Row="1"
            Style="{StaticResource HeadingTextBlock}"
            Text="Global Hotkey" />        <TextBox
            Name="HotkeyTextBox"
            Grid.Row="2"
            Margin="0,0,0,8"
            GotFocus="HotkeyTextBox_GotFocus"
            KeyDown="HotkeyTextBox_KeyDown"
            LostFocus="HotkeyTextBox_LostFocus"
            PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
            PreviewTextInput="HotkeyTextBox_PreviewTextInput"
            ToolTip="Click here and press your desired key combination (e.g., Ctrl+Shift+B)">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        Header="✂️ Cu_t"
                        InputGestureText="Ctrl+X"
                        Command="ApplicationCommands.Cut" />
                    <MenuItem
                        Header="📋 _Copy"
                        InputGestureText="Ctrl+C"
                        Command="ApplicationCommands.Copy" />
                    <MenuItem
                        Header="📄 _Paste"
                        InputGestureText="Ctrl+V"
                        Command="ApplicationCommands.Paste" />
                    <Separator />
                    <MenuItem
                        Header="🔍 Select _All"
                        InputGestureText="Ctrl+A"
                        Command="ApplicationCommands.SelectAll" />
                    <Separator />
                    <MenuItem
                        Header="↶ _Undo"
                        InputGestureText="Ctrl+Z"
                        Command="ApplicationCommands.Undo" />
                    <MenuItem
                        Header="↷ _Redo"
                        InputGestureText="Ctrl+Y"
                        Command="ApplicationCommands.Redo" />
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
        <TextBlock
            Grid.Row="3"
            Margin="0,0,0,24"
            Style="{StaticResource SubtleTextBlock}"
            Text="Click in the field above and press your desired key combination (e.g., Ctrl+Shift+B)" />

        <!--  Paste Behavior Section  -->
        <TextBlock
            Grid.Row="4"
            Style="{StaticResource HeadingTextBlock}"
            Text="Paste Behavior" />
        <ComboBox
            Name="PasteBehaviorComboBox"
            Grid.Row="5"
            Margin="0,0,0,8"
            ToolTip="Choose how AI results are pasted back to your application">
            <ComboBoxItem>Auto-paste (Replace selected text automatically)</ComboBoxItem>
            <ComboBoxItem>Clipboard mode (Copy to clipboard, paste manually)</ComboBoxItem>
            <ComboBoxItem>Review mode (Show preview window for confirmation)</ComboBoxItem>
        </ComboBox>
        <TextBlock
            Name="PasteBehaviorDescriptionTextBlock"
            Grid.Row="6"
            Margin="0,0,0,24"
            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            Text="Auto-paste provides the smoothest workflow but requires trust in AI results" />

        <!--  Performance Settings Section  -->
        <TextBlock
            Grid.Row="7"
            Style="{StaticResource HeadingTextBlock}"
            Text="Performance Settings" />

        <CheckBox
            Name="EnableTextSelectionCheckBox"
            Grid.Row="8"
            Margin="0,0,0,8"
            Content="🔍 Enable automatic text selection and clipboard detection"
            ToolTip="When enabled, the app will detect selected text and clipboard content to prefill prompts. Disable for faster window opening." />

        <TextBlock
            Grid.Row="9"
            Margin="0,0,0,24"
            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            Text="Disabling this feature makes the app more responsive" />

        <!--  API Configuration Section  -->
        <TextBlock
            Grid.Row="10"
            Style="{StaticResource HeadingTextBlock}"
            Text="API Configuration" />
        <TextBlock
            Grid.Row="11"
            Margin="0,0,0,8"
            Text="API Base URL:" />        <TextBox
            Name="ApiBaseUrlTextBox"
            Grid.Row="12"
            Margin="0,0,0,16"
            ToolTip="OpenAI compatible API endpoint (e.g., https://api.openai.com/v1)">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        Header="✂️ Cu_t"
                        InputGestureText="Ctrl+X"
                        Command="ApplicationCommands.Cut" />
                    <MenuItem
                        Header="📋 _Copy"
                        InputGestureText="Ctrl+C"
                        Command="ApplicationCommands.Copy" />
                    <MenuItem
                        Header="📄 _Paste"
                        InputGestureText="Ctrl+V"
                        Command="ApplicationCommands.Paste" />
                    <Separator />
                    <MenuItem
                        Header="🔍 Select _All"
                        InputGestureText="Ctrl+A"
                        Command="ApplicationCommands.SelectAll" />
                    <Separator />
                    <MenuItem
                        Header="↶ _Undo"
                        InputGestureText="Ctrl+Z"
                        Command="ApplicationCommands.Undo" />
                    <MenuItem
                        Header="↷ _Redo"
                        InputGestureText="Ctrl+Y"
                        Command="ApplicationCommands.Redo" />
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>

        <TextBlock Grid.Row="13" Margin="0,0,0,8">
            <Run Text="API Key:" />
            <Run
                FontWeight="Bold"
                Foreground="Red"
                Text=" *" />
        </TextBlock>        <PasswordBox
            Name="ApiKeyPasswordBox"
            Grid.Row="14"
            Margin="0,0,0,16"
            ToolTip="API Key is required to connect to your LLM service">
            <PasswordBox.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        Header="📋 _Copy"
                        InputGestureText="Ctrl+C"
                        Command="ApplicationCommands.Copy" />
                    <MenuItem
                        Header="📄 _Paste"
                        InputGestureText="Ctrl+V"
                        Command="ApplicationCommands.Paste" />
                    <Separator />
                    <MenuItem
                        Header="🔍 Select _All"
                        InputGestureText="Ctrl+A"
                        Command="ApplicationCommands.SelectAll" />
                </ContextMenu>
            </PasswordBox.ContextMenu>
        </PasswordBox>
        <TextBlock Grid.Row="15" Margin="0,0,0,8">
            <Run Text="LLM Model:" />
            <Run Foreground="Red" Text="*" />
        </TextBlock>
        <Grid Grid.Row="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>            <ComboBox
                Name="LlmModelComboBox"
                Grid.Column="0"
                Margin="0,0,8,0"
                ui:ControlHelper.PlaceholderText="Click 'Get Models' to populate..."
                ToolTip="Select your LLM model or click 'Get Models' to retrieve available options">
                <ComboBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem
                            Header="📋 _Copy"
                            InputGestureText="Ctrl+C"
                            Command="ApplicationCommands.Copy" />
                        <MenuItem
                            Header="📄 _Paste"
                            InputGestureText="Ctrl+V"
                            Command="ApplicationCommands.Paste" />
                        <Separator />
                        <MenuItem
                            Header="🔍 Select _All"
                            InputGestureText="Ctrl+A"
                            Command="ApplicationCommands.SelectAll" />
                    </ContextMenu>
                </ComboBox.ContextMenu>
            </ComboBox>
            <Button
                Name="RetrieveModelsButton"
                Grid.Column="1"
                Click="RetrieveModelsButton_Click"
                Content="⤓ Get Models"
                Style="{StaticResource SecondaryButton}"
                ToolTip="Fetch available models from API (requires API key)" />
        </Grid>
        <TextBlock
            Name="ModelStatusTextBlock"
            Grid.Row="17"
            Margin="0,4,0,32"
            Style="{StaticResource SubtleTextBlock}"
            Text="Enter API key and base URL first, then click 'Retrieve Models'"
            Visibility="Visible" />
        <!--  Buttons  -->
        <Grid Grid.Row="19">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Test Connection button aligned left  -->
            <Button
                Name="TestButton"
                Grid.Column="0"
                Click="TestButton_Click"
                Content="📡 Connection Test"
                Style="{StaticResource SecondaryButton}" />

            <!--  Save and Cancel buttons aligned right  -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button
                    Name="SaveButton"
                    Margin="0,0,12,0"
                    Click="SaveButton_Click"
                    Content="✓ Save"
                    Style="{StaticResource SuccessButton}" />
                <Button
                    Name="CancelButton"
                    Click="CancelButton_Click"
                    Content="✕ Cancel"
                    Style="{StaticResource DangerButton}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
