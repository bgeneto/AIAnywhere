<Window
    x:Class="AIAnywhere.Views.PromptWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="AI Anywhere"
    Width="650"
    MinWidth="550"
    MinHeight="450"
    ui:WindowHelper.UseModernWindowStyle="True"
    Icon="../AIAnywhere.ico"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    SizeToContent="Height"
    Topmost="True"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource TitleTextBlock}"
            Text="AI Anywhere" />

        <!--  Operation/Task Selection  -->
        <TextBlock
            Grid.Row="1"
            Style="{StaticResource HeadingTextBlock}"
            Text="Task Selection:" />
        <ComboBox
            Name="OperationComboBox"
            Grid.Row="2"
            Margin="0,0,0,20"
            DisplayMemberPath="Name"
            IsDropDownOpen="False"
            IsEditable="False"
            IsReadOnly="False"
            SelectionChanged="OperationComboBox_SelectionChanged" />

        <!--  Dynamic Options Panel  -->
        <StackPanel
            Name="OptionsPanel"
            Grid.Row="3"
            Margin="0,0,0,20" />
        <!--  Prompt Input  -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Prompt header with clear button  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource HeadingTextBlock}"
                    Text="Your Prompt"
                    ToolTip="Press Ctrl+ENTER to send" />
                <Button
                    Name="ClearButton"
                    Grid.Column="1"
                    Margin="8,0,0,8"
                    Padding="8,4"
                    Click="ClearButton_Click"
                    Content="🗑️ Clear"
                    FontSize="11"
                    Style="{StaticResource SecondaryButton}"
                    ToolTip="Clear the prompt text">
                    <Button.Resources>
                        <Style BasedOn="{StaticResource SecondaryButton}" TargetType="Button">
                            <Setter Property="Background" Value="#FFF9C4" />
                            <Setter Property="BorderBrush" Value="#FFB74D" />
                            <Setter Property="Foreground" Value="#E65100" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE082" />
                                    <Setter Property="BorderBrush" Value="#FF9800" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
            <TextBox
                Name="PromptTextBox"
                Grid.Row="1"
                MinHeight="180"
                Margin="0,0,0,20"
                AcceptsReturn="True"
                TextChanged="PromptTextBox_TextChanged"
                TextWrapping="Wrap"
                ToolTip="Press Ctrl+ENTER to send"
                VerticalScrollBarVisibility="Auto">
                <TextBox.ContextMenu>
                    <ContextMenu Opened="ContextMenu_Opened">
                        <MenuItem
                            Name="CutMenuItem"
                            Click="CutMenuItem_Click"
                            Header="✂️ Cu_t"
                            InputGestureText="Ctrl+X" />
                        <MenuItem
                            Name="CopyMenuItem"
                            Click="CopyMenuItem_Click"
                            Header="📋 _Copy"
                            InputGestureText="Ctrl+C" />
                        <MenuItem
                            Name="PasteMenuItem"
                            Click="PasteMenuItem_Click"
                            Header="📄 _Paste"
                            InputGestureText="Ctrl+V" />
                        <Separator />
                        <MenuItem
                            Click="SelectAllMenuItem_Click"
                            Header="🔍 Select _All"
                            InputGestureText="Ctrl+A" />
                        <MenuItem
                            Click="ClearAllMenuItem_Click"
                            Header="🗑️ _Clear All"
                            InputGestureText="" />
                        <Separator />
                        <MenuItem
                            Name="UndoMenuItem"
                            Click="UndoMenuItem_Click"
                            Header="↶ _Undo"
                            InputGestureText="Ctrl+Z" />
                        <MenuItem
                            Name="RedoMenuItem"
                            Click="RedoMenuItem_Click"
                            Header="↷ _Redo"
                            InputGestureText="Ctrl+Y" />
                    </ContextMenu>
                </TextBox.ContextMenu>
            </TextBox>
        </Grid>

        <!--  Buttons  -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Settings button aligned left  -->
            <Button
                Name="SettingsButton"
                Grid.Column="0"
                Click="SettingsButton_Click"
                Content="Settings"
                Style="{StaticResource SecondaryButton}" />

            <!--  Send and Cancel buttons aligned right  -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button
                    Name="ProcessButton"
                    Margin="0,0,12,0"
                    Click="ProcessButton_Click"
                    Content="✓ Send"
                    IsDefault="True"
                    Style="{StaticResource SuccessButton}" />
                <Button
                    Name="CancelButton"
                    Click="CancelButton_Click"
                    Content="✕ Cancel"
                    IsCancel="True"
                    Style="{StaticResource DangerButton}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
