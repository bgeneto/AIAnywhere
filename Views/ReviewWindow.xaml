<Window
    x:Class="AIAnywhere.Views.ReviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="AI Result Preview"
    Width="640"
    Height="640"
    MinWidth="480"
    MinHeight="320"
    ui:WindowHelper.UseModernWindowStyle="True"
    Icon="../AIAnywhere.ico"
    ResizeMode="CanResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header with animated icon  -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Ellipse
                Grid.Column="0"
                Width="40"
                Height="40"
                Margin="0,0,12,0">
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#4CAF50" />
                        <GradientStop Offset="1" Color="#45A049" />
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <TextBlock
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Foreground="White"
                Text="✓  " />
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                    Text="AI Result Ready" />
                <TextBlock
                    Name="OperationTypeTextBlock"
                    FontSize="12"
                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                    Text="Text Translation" />
            </StackPanel>
        </Grid>
        <!--  Preview Content  -->
        <Border
            Grid.Row="1"
            Padding="16"
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!--  Text Content - Now selectable  -->
                    <TextBox
                        Name="ResultTextBox"
                        MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                        Margin="0"
                        Padding="0"
                        AcceptsReturn="True"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI, Tahoma, Geneva, Verdana, sans-serif"
                        FontSize="14"
                        Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                        HorizontalScrollBarVisibility="Disabled"
                        IsReadOnly="True"
                        IsTabStop="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Disabled">
                        <TextBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    Click="CopySelectedMenuItem_Click"
                                    Header="📋 _Copy Selected"
                                    InputGestureText="Ctrl+C" />
                                <MenuItem
                                    Click="CopyAllMenuItem_Click"
                                    Header="📄 Copy _All"
                                    InputGestureText="Ctrl+A, Ctrl+C" />
                                <Separator />
                                <MenuItem
                                    Click="SelectAllMenuItem_Click"
                                    Header="🔍 _Select All"
                                    InputGestureText="Ctrl+A" />
                            </ContextMenu>
                        </TextBox.ContextMenu>
                        <TextBox.Resources>
                            <!--  Remove default TextBox selection color and use system selection  -->
                            <SolidColorBrush
                                x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                Opacity="0.4"
                                Color="{DynamicResource SystemAccentColor}" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="{DynamicResource SystemBaseHighColor}" />
                        </TextBox.Resources>
                    </TextBox>

                    <!--  Image Content  -->
                    <Image
                        Name="ResultImage"
                        MaxWidth="600"
                        MaxHeight="400"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Stretch="Uniform"
                        Visibility="Collapsed" />

                    <!--  Loading Panel for Images  -->
                    <StackPanel
                        Name="LoadingPanel"
                        Margin="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                        <Ellipse
                            Width="40"
                            Height="40"
                            Margin="0,0,0,12">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="#4CAF50" />
                                    <GradientStop Offset="1" Color="#45A049" />
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="LoadingRotateTransform" CenterX="20" CenterY="20" />
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <TextBlock
                            Margin="0,0,0,8"
                            HorizontalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                            Text="🖼️ Loading image..." />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="12"
                            Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                            Text="Please wait while we download and prepare your image..." />
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>

        <!--  Status bar  -->
        <Grid Grid.Row="2" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Name="CharacterCountTextBlock"
                Grid.Column="0"
                FontSize="11"
                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                Text="0 characters" />

            <TextBlock
                Grid.Column="2"
                FontSize="11"
                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                Text="Press Enter to paste, Esc to cancel" />
        </Grid>

        <!--  Action Buttons  -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Copy to Clipboard button  -->
            <Button
                Name="CopyButton"
                Grid.Column="0"
                Margin="0,0,12,0"
                HorizontalAlignment="Left"
                Click="CopyButton_Click"
                Content="📋 Copy to Clipboard"
                Style="{StaticResource SecondaryButton}" />

            <!--  Main action buttons  -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button
                    Name="PasteButton"
                    MinWidth="80"
                    Margin="0,0,12,0"
                    Click="PasteButton_Click"
                    Content="✓ Paste"
                    IsDefault="True"
                    Style="{StaticResource SuccessButton}" />
                <Button
                    Name="CancelButton"
                    MinWidth="80"
                    Click="CancelButton_Click"
                    Content="✕ Cancel"
                    IsCancel="True"
                    Style="{StaticResource DangerButton}" />
            </StackPanel>
        </Grid>
    </Grid>
    <!--  Animations  -->
    <Window.Resources>
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.3" />
            <DoubleAnimation
                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                From="0.95"
                To="1"
                Duration="0:0:0.3" />
            <DoubleAnimation
                Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                From="0.95"
                To="1"
                Duration="0:0:0.3" />
        </Storyboard>

        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="LoadingRotateTransform"
                Storyboard.TargetProperty="Angle"
                From="0"
                To="360"
                Duration="0:0:1.5" />
        </Storyboard>
    </Window.Resources>

    <Window.RenderTransform>
        <ScaleTransform />
    </Window.RenderTransform>
</Window>
