<Window x:Class="AIAnywhere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Anywhere" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowState="Minimized" ShowInTaskbar="False"
        Visibility="Hidden"
        Icon="AIAnywhere.ico">
    <Grid>
        <!-- This window is hidden and serves as the main application window -->
        <!-- All interaction happens through the hotkey and prompt window -->
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Text="AI Anywhere is running in the background.&#x0a;Use your configured hotkey to activate."
                   TextAlignment="Center" FontSize="16" Foreground="#666"/>
    </Grid>
</Window>
