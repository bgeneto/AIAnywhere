<Window x:Class="AIAnywhere.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="About AI Anywhere"
        Width="500"
        ui:WindowHelper.UseModernWindowStyle="True"
        Icon="../AIAnywhere.ico"
        ResizeMode="NoResize"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- App Icon -->
            <RowDefinition Height="Auto" />
            <!-- App Name -->
            <RowDefinition Height="Auto" />
            <!-- Version -->
            <RowDefinition Height="Auto" />
            <!-- Description -->
            <RowDefinition Height="Auto" />
            <!-- Author -->
            <RowDefinition Height="Auto" />
            <!-- License -->
            <RowDefinition Height="Auto" />
            <!-- Copyright -->
            <RowDefinition Height="Auto" />
            <!-- Framework Info -->
            <RowDefinition Height="Auto" />
            <!-- Links Section -->
            <RowDefinition Height="*" />
            <!-- Spacer -->
            <RowDefinition Height="Auto" />
            <!-- Close Button -->
        </Grid.RowDefinitions>
        <!-- App Icon -->
        <Image Grid.Row="0"
               Width="64"
               Height="64"
               Margin="0,0,0,16"
               HorizontalAlignment="Center"
               Source="../AIAnywhere.png" />
        <!-- App Name -->
        <TextBlock Grid.Row="1"
                   Margin="0,0,0,8"
                   HorizontalAlignment="Center"
                   FontSize="28"
                   FontWeight="Bold"
                   Style="{StaticResource TitleTextBlock}"
                   Text="AI Anywhere" />
        <!-- Version -->
        <TextBlock Name="VersionTextBlock"
                   Grid.Row="2"
                   Margin="0,0,0,16"
                   HorizontalAlignment="Center"
                   FontSize="14"
                   Style="{StaticResource SubtleTextBlock}"
                   Text="Version 1.1.4" />
        <!-- Description -->
        <TextBlock Grid.Row="3"
                   MaxWidth="400"
                   Margin="0,0,0,24"
                   HorizontalAlignment="Center"
                   Text="A powerful AI assistant that works anywhere on your desktop. Activate with a global hotkey to enhance any text with AI capabilities."
                   TextAlignment="Center"
                   TextWrapping="Wrap" />
        <!-- Author -->
        <StackPanel Grid.Row="4"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <TextBlock Style="{StaticResource SubtleTextBlock}"
                       Text="ðŸ‘¤ Author: " />
            <TextBlock FontWeight="Medium"
                       Text="Bernhard Enders" />
        </StackPanel>
        <!-- License -->
        <StackPanel Grid.Row="5"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <TextBlock Style="{StaticResource SubtleTextBlock}"
                       Text="ðŸ“„ License: " />
            <TextBlock FontWeight="Medium"
                       Text="MIT License" />
        </StackPanel>
        <!-- Copyright -->
        <TextBlock Name="CopyrightTextBlock"
                   Grid.Row="6"
                   Margin="0,0,0,16"
                   HorizontalAlignment="Center"
                   FontSize="12"
                   Style="{StaticResource SubtleTextBlock}"
                   Text="Â© 2025 LABiA-FUP/UnB. All rights reserved." />
        <!-- Framework Info -->
        <StackPanel Grid.Row="7"
                    Margin="0,0,0,24"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <TextBlock FontSize="12"
                       Style="{StaticResource SubtleTextBlock}"
                       Text="âš™ï¸ Built with " />
            <TextBlock FontSize="12"
                       FontWeight="Medium"
                       Text=".NET 10.0" />
            <TextBlock FontSize="12"
                       Style="{StaticResource SubtleTextBlock}"
                       Text=" and " />
            <TextBlock FontSize="12"
                       FontWeight="Medium"
                       Text="WPF" />
        </StackPanel>
        <!-- Links Section -->
        <StackPanel Grid.Row="8"
                    Margin="0,0,0,32"
                    HorizontalAlignment="Center">
            <TextBlock Margin="0,0,0,8"
                       HorizontalAlignment="Center"
                       Style="{StaticResource HeadingTextBlock}"
                       Text="ðŸ”— Links" />
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button Name="GitHubButton"
                        Margin="0,0,8,0"
                        Click="GitHubButton_Click"
                        Content="ðŸ“ Source Code"
                        Style="{StaticResource SecondaryButton}"
                        ToolTip="View source code on GitHub" />
                <Button Name="IssuesButton"
                        Click="IssuesButton_Click"
                        Content="ðŸ› Report Issue"
                        Style="{StaticResource SecondaryButton}"
                        ToolTip="Report bugs or request features" />
            </StackPanel>
        </StackPanel>
        <!-- Close Button -->
        <Button Name="CloseButton"
                Grid.Row="10"
                MinWidth="100"
                HorizontalAlignment="Center"
                Click="CloseButton_Click"
                Content="âœ“ Close"
                Style="{StaticResource PrimaryButton}" />
    </Grid>
</Window>